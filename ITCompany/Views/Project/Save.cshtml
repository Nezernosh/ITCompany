@model ITCompany.Models.Project

@{
    ViewBag.Title = "Save";
    ViewBag.PageTitle = "Save project";
}


<form method="post" action="@Url.Action("Save")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col offset-m3 s12 m6 l6">
            <h5>Project</h5>
            <div class="section white">
                <div class="row">
                    <div class="input-field col s12">
                        @Html.DropDownListFor(model => model.ClientID, null, new { @id = "client" } )
                        <label for="client">Client</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @id = "title" } })
                        <label for="title">Title</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @id = "status" } })
                        <label for="status">Status</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @id = "description" } })
                        <label for="description">Description</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @id = "budget" } })
                        <label for="budget">Budget</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col offset-m3 s12 m6 l12 center">
            <button type="submit" class="waves-effect waves-light blue btn margin-right">Save</button>
            <a href="@Url.Action("Index")" class="waves-effect waves-grey btn-flat">Back</a>
        </div>
    </div>
</form>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
