@model IEnumerable<ITCompany.Models.Employee>

@{
    ViewBag.Title = "Index";
    ViewBag.PageTitle = "Employees";
}

<div class="row">
    <div class="col s12">
        <div class="subnav">
            <a href="@Url.Action("Create")" class="waves-effect add green white-text margin-right">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>
</div>


@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col s12">
            <table class="white width-auto bordered responsive-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>FullName</th>
                        <th>Phone</th>
                        <th>E-mail</th>
                        <th>Position</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Position)</td>
                            <td class="right-align">
                                <a class="table-btn blue-grey-text waves-effect" href="@Url.Action("Edit", new { id = item.ID })">
                                    <i class="material-icons">mode_edit</i>
                                </a>

                                <a class="table-btn red-text waves-effect confirm-action" href="@Url.Action("Delete", new { id = item.ID })">
                                    <i class="material-icons">delete</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col s12">
            <h5>No employees</h5>
        </div>
    </div>
}

@{
    ViewBag.ConfirmModalId = "confirm-modal";
    ViewBag.ConfirmModalTitle = "Deleting employee";
    ViewBag.ConfirmModalText = "Are you sure?";
}
@Html.Partial("~/Views/Shared/_ConfirmModal.cshtml")